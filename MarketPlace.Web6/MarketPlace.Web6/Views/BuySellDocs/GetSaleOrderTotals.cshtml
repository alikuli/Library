@model ModelsClassLibrary.ModelsNS.GlobalObjectNS.GlobalObject


@{
    ViewBag.Title = "ShowCashMenu";
    const string SALE_ORDER_STATEMENT = "saleorderstatement";
    ViewBag.StatementType = SALE_ORDER_STATEMENT;

    bool zeroUnconfirmedRequests = Model.Sale.RequestUnconfirmed.IsZero;
    bool zeroConfirmedRequests = Model.Sale.RequestConfirmed.IsZero;
    bool zeroTotal = Model.Sale.All.IsZero;
    bool zeroInProccessOrders = Model.Sale.InProccess.IsZero;
    bool zeroConfirmedBySeller = Model.Sale.BeingPreparedForShipmentBySeller.IsZero;
    bool zeroReadyForShipment = Model.Sale.ReadyForPickup.IsZero;
    bool zeroConfirmedByCourier = Model.Sale.CourierComingToPickUp.IsZero;
    bool zeroPickedUp = Model.Sale.Enroute.IsZero;
    bool zeroDelivered = Model.Sale.Delivered.IsZero;
    bool zeroRejected = Model.Sale.Rejected.IsZero;
    bool zeroProblem = Model.Sale.Problem.IsZero;

    string userTotalSaleOrdersMenuItem = Model.Sale.All.MenuName;
    string userInProccessOrdersMenuItem = Model.Sale.InProccess.MenuName;
    string userRequestsUnconfirmedMenuItem = Model.Sale.RequestUnconfirmed.MenuName;
    string userRequestsConfirmedMenuItem = Model.Sale.RequestConfirmed.MenuName;
    string userConfirmedBySellersMenuItem = Model.Sale.BeingPreparedForShipmentBySeller.MenuName;
    string userReadyForShipmentsMenuItem = Model.Sale.ReadyForPickup.MenuName;
    string userConfirmedByCouriersMenuItem = Model.Sale.CourierComingToPickUp.MenuName;
    string userEnrouteMenuItem = Model.Sale.Enroute.MenuName;
    string userDeliveredsMenuItem = Model.Sale.Delivered.MenuName;
    string userRejectedsMenuItem = Model.Sale.Rejected.MenuName;
    string userProblemsMenuItem = Model.Sale.Problem.MenuName;


    string userTotalSaleToolTip = Model.Sale.All.MenuToolTip;
    string userInProccessOrdersToolTip = Model.Sale.InProccess.MenuToolTip;
    string userRequestsUnconfirmedToolTip = Model.Sale.RequestUnconfirmed.MenuToolTip;
    string userRequestsConfirmedToolTip = Model.Sale.RequestConfirmed.MenuToolTip;
    string userConfirmedBySellersToolTip = Model.Sale.BeingPreparedForShipmentBySeller.MenuToolTip;
    string userReadyForShipmentsToolTip = Model.Sale.ReadyForPickup.MenuToolTip;
    string userConfirmedByCouriersToolTip = Model.Sale.CourierComingToPickUp.MenuToolTip;
    string userEnrouteToolTip = Model.Sale.Enroute.MenuToolTip;
    string userDeliveredsToolTip = Model.Sale.Delivered.MenuToolTip;
    string userRejectedsToolTip = Model.Sale.Rejected.MenuToolTip;
    string userProblemsToolTip = Model.Sale.Problem.MenuToolTip;

    string userTotalSale_Path = Url.Action("List_Sale_All", "BuySellDocs");
    string userInProccessOrders_Path = Url.Action("List_Sale_InProccess", "BuySellDocs");
    string userRequestsUnconfirmed_Path = Url.Action("List_Sale_RequestUnconfirmed", "BuySellDocs");
    string userRequestsConfirmed_Path = Url.Action("List_Sale_RequestConfirmed", "BuySellDocs");
    string userConfirmedBySellers_Path = Url.Action("List_Sale_ConfirmedBySeller", "BuySellDocs");
    string userConfirmedByCouriers_Path = Url.Action("List_Sale_ConfirmedByCourier", "BuySellDocs");
    string userReadyForShipments_Path = Url.Action("List_Sale_ReadyForShipment", "BuySellDocs");
    string userEnroute_Path = Url.Action("List_Sale_Enroute", "BuySellDocs");
    string userDelivereds_Path = Url.Action("List_Sale_Delivered", "BuySellDocs");
    string userRejecteds_Path = Url.Action("List_Sale_Rejected", "BuySellDocs");
    string userProblems_Path = Url.Action("List_Sale_Problem", "BuySellDocs");


    bool zeroCourierAcceptedByShipperAndBuyer = Model.Sale.CourierAcceptedByBuyerAndSeller.IsZero;
    string userCourierAcceptedByBuyerAndSellerMenuItem = Model.Sale.CourierAcceptedByBuyerAndSeller.MenuName;
    string userCourierAcceptedByBuyerAndSellerToolTip = Model.Sale.CourierAcceptedByBuyerAndSeller.MenuToolTip;
    string userCourierAcceptedByBuyerAndSeller_Path = Url.Action("List_Sale_CourierAcceptedByBuyerAndSeller", "BuySellDocs");
    
    
}

<h2 class="bg-info text-white w-100 mt-1 p-2 text-center">Sale Orders</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="">
        <hr />

        @if (zeroTotal)
        {
            <p class="text-center">You have no orders.</p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userTotalSale_Path " data-toggle=" tooltip" title="@userTotalSaleToolTip" data-placement="left">@userTotalSaleOrdersMenuItem</a>
            <br />

        }


        @if (zeroInProccessOrders)
        {
            <p class="text-center">You have no orders in proccess</p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userInProccessOrders_Path" data-toggle=" tooltip" title="@userInProccessOrdersToolTip" data-placement="left">@userInProccessOrdersMenuItem</a>
            <br />

        }



        <h5 class="text-dark background-ltgrey  w-100 m-1 text-center p-2">Detail</h5>





        @if (zeroRejected)
        {
            <p class="text-center">You have no orders that have been rejected</p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userRejecteds_Path " data-toggle=" tooltip" title="@userRejectedsToolTip" data-placement="left">@userRejectedsMenuItem</a>
            <br />

        }




        @if (zeroProblem)
        {
            <p class="text-center">You have no orders that are a problem (lucky you)</p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userProblems_Path " data-toggle=" tooltip" title="@userProblemsToolTip" data-placement="left">@userProblemsMenuItem</a>
            <br />

        }





        @if (zeroUnconfirmedRequests)
        {
            <p class="text-center">You have no unconfirmed requests</p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userRequestsUnconfirmed_Path " data-toggle=" tooltip" title="@userRequestsUnconfirmedToolTip" data-placement="left">@userRequestsUnconfirmedMenuItem</a>
            <br />

        }



        @if (zeroConfirmedRequests)
        {
            <p class="text-center">You have no CONFIRMED requests</p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userRequestsConfirmed_Path " data-toggle=" tooltip" title="@userRequestsConfirmedToolTip" data-placement="left">@userRequestsConfirmedMenuItem</a>
            <br />

        }






        @if (zeroConfirmedBySeller)
        {
            <p class="text-center">You have no orders confirmed by the Seller </p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userConfirmedBySellers_Path " data-toggle=" tooltip" title="@userConfirmedBySellersToolTip" data-placement="left">@userConfirmedBySellersMenuItem</a>
            <br />

        }



        @if (zeroReadyForShipment)
        {
            <p class="text-center">You have no orders Ready for Shipment </p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userReadyForShipments_Path " data-toggle=" tooltip" title="@userReadyForShipmentsToolTip" data-placement="left">@userReadyForShipmentsMenuItem</a>
            <br />

        }













        @if (zeroCourierAcceptedByShipperAndBuyer)
        {
            <p class="text-center">You have no orders confirmed for pickup by Courer</p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userCourierAcceptedByBuyerAndSeller_Path " data-toggle=" tooltip" title="@userCourierAcceptedByBuyerAndSellerToolTip" data-placement="left">@userCourierAcceptedByBuyerAndSellerMenuItem</a>
            <br />

        }














        @if (zeroConfirmedByCourier)
        {
            <p class="text-center">You have no orders being picke up by couriers</p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userConfirmedByCouriers_Path " data-toggle=" tooltip" title="@userConfirmedByCouriersToolTip" data-placement="left">@userConfirmedByCouriersMenuItem</a>
            <br />

        }



        @if (zeroPickedUp)
        {
            <p class="text-center">You have no orders Enroute</p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userEnroute_Path " data-toggle=" tooltip" title="@userEnrouteToolTip" data-placement="left">@userEnrouteMenuItem</a>
            <br />

        }



        @if (zeroDelivered)
        {
            <p class="text-center">You have no orders delivered</p>
        }
        else
        {
            <a class="btn btn-lg btn-default text-info  w-100 m-1" href="@userDelivereds_Path " data-toggle=" tooltip" title="@userDeliveredsToolTip" data-placement="left">@userDeliveredsMenuItem</a>
            <br />

        }







</div>
}