@model ModelsClassLibrary.ModelsNS.ProductNS.Product



<div class="well p-3 w-100">

    <div class="form-group  d-flex">
        @Html.LabelFor(model => model.Volume, htmlAttributes: new { @class = "control-label pr-3" })
        @Html.EditorFor(model => model.Volume, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Volume of Item" } })
        @Html.ValidationMessageFor(model => model.Volume, "", new { @class = "text-danger" })
        @Html.DropDownListFor(x => x.UomVolumeId,
                                              (@Model.SelectListUomVolume as IEnumerable<SelectListItem>),
                                      "--- Select UoM Vol---",
                                      new { @class = "form-control" })
    </div>

</div>

