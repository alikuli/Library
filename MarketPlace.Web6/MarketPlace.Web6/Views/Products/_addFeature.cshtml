@model ModelsClassLibrary.ModelsNS.FeaturesNS.MenuFeatureNS.CreateNewFeatureModel

@{
    ViewBag.Title = "Add Feature";
    string controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    
    
}

<h2>Add Feature to @Model.ParentName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal form-inline">
        @Html.HiddenFor(x => x.ParentId)
        @Html.HiddenFor(x => x.ReturnUrl)

        <div class="form-group">
            @Html.LabelFor(model => model.FeatureId, htmlAttributes: new { @class = "mr-5" })
            @Html.DropDownListFor(x => x.FeatureId,
                (@Model.SelectListFeature as IEnumerable<SelectListItem>),
                 "--- Select Feature ---",
                 new { @class = "form-control" })

            @Html.ActionLink("Create Feature not in list", "CreateNewFeature", controllerName, new { returnUrl = Model.ReturnUrl, menuPathid = Model.ParentId }, new { @class = "btn btn-success ml-5" })
        </div>

    </div>
    <div class="form-group mt-5">
            <input type="submit" value="Save" class="btn btn-default" />
            <a href="@Url.Content(Model.ReturnUrl)">Back to list</a>

    </div>
}

