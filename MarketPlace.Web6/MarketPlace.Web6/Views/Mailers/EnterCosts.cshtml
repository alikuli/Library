@model ModelsClassLibrary.ModelsNS.MailerNS.MailingCostsVM

@using (Html.BeginForm())
{
    
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.AddressVerificationHdrId)

    <div class="form-horizontal">
        <h4>
            @Model.AddressVerificationHdr.FullName()
        </h4>


        <div class="form-group">
            @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "" })
            @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.TotalLettersMailed, htmlAttributes: new { @class = "" })
            @Html.EditorFor(model => model.TotalLettersMailed, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TotalLettersMailed, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

