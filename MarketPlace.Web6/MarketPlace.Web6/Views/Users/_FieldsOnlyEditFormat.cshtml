        <div class="card">
            <div class="card-header">
                <a class="collapsed card-link" data-toggle="collapse" href="#collapse1">
                    Required Info
                </a>
            </div>
            <div id="collapse1" class="collapse" data-parent="#accordion">
                <div class="card-body">
                    <div class="well p-3 m-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, "User Name", htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter unique user name" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>



                        <div class="form-group">
                            @Html.LabelFor(model => model.PersonId, htmlAttributes: new { @class = "" })
                            @Html.DropDownListFor(x => x.PersonId,
                                     (@Model.SelectListPeople as IEnumerable<SelectListItem>),
                            "--- Select Person for User---",
                            new { @class = "form-control" })
                        </div>


                    </div>


                    <div class="well m-3">


                        <div class="custom-control custom-checkbox">
                            @Html.CheckBoxFor(model => model.BlackListed.Value, new { htmlAttributes = new { @class = "custom-control-input" } })
                            @Html.LabelFor(x => x.BlackListed.Value, "BlackListed", htmlAttributes: new { @class = "" })
                        </div>

                        <div class="p-4">
                            <strong>Activated</strong>
                            @Html.EditorFor(x => x.BlackListed.ActivateDate)
                            <strong>Deactivated</strong>

                            @Html.EditorFor(x => x.BlackListed.DeactivateDate)
                        </div>

                    </div>

                </div>
