@model ModelsClassLibrary.ModelsNS.MessagesToPeopleListNS.MessageToPeopleList

@Html.HiddenFor(x => x.Name)

<div class="form-group">
    @Html.DropDownListFor(x => x.MessageId,
                            (@Model.SelectListMessage as IEnumerable<SelectListItem>),
                    "--- Message ---",
                                new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.DropDownListFor(x => x.PersonId,
                            (@Model.SelectListPerson as IEnumerable<SelectListItem>),
                    "--- To Person ---",
                                new { @class = "form-control" })
</div>
