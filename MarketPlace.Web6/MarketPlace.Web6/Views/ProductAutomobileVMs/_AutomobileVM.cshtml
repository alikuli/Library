@model ModelsClassLibrary.ModelsNS.ProductNS.ProductNS.ViewModels.ProductAutomobileVM

<div class="container">


    <div class="form-group">
        @Html.LabelFor(model => model.Brand, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Brand" } })
            @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.ModelNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ModelNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Model Number" } })
            @Html.ValidationMessageFor(model => model.ModelNumber, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.EngineSize, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EngineSize, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Engine Size" } })
            @Html.ValidationMessageFor(model => model.EngineSize, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.NumberOfSeats, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NumberOfSeats, new { htmlAttributes = new { @class = "form-control", @placeholder = "Number of seats" } })
            @Html.ValidationMessageFor(model => model.NumberOfSeats, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.AutomobileGearTypeEnum, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class=" col-md-10">
            @Html.DropDownListFor(x => x.AutomobileGearTypeEnum, @ViewBag.GearTypeSelectList as IEnumerable<SelectListItem>, "Select Engine Type", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FuelTypeEnum, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class=" col-md-10">
            @Html.DropDownListFor(x => x.FuelTypeEnum, @ViewBag.FuelTypeSelectList as IEnumerable<SelectListItem>, "Select Fuel Type", new { @class = "form-control" })
        </div>
    </div>
</div>
