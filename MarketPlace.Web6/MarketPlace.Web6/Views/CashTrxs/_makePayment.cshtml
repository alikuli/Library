@model ModelsClassLibrary.ModelsNS.CashNS.CashTrxNS.CashPaymentModel

@{
    string actionName  = "YesOrNo";
    string controllerName = "CashTrxs";
}
@using (Html.BeginForm(actionName, controllerName, FormMethod.Get))
{

    <div class="form-group">
        @Html.LabelFor(model => model.PersonToId, htmlAttributes: new { @class = "" })
        @Html.DropDownListFor(x => x.PersonToId,
                  (@Model.SelectListPeopleTo as IEnumerable<SelectListItem>),
                  "--- Select Person ---",
                  new { @class = "form-control" })
    </div>

    @Html.HiddenFor(x => x.CashTypeEnum)


    <div class="form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
    </div>
    <input type="submit" value="Save" class="btn btn-success" />
}