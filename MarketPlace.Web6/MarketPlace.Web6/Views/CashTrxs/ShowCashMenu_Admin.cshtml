@model ModelsClassLibrary.ModelsNS.GlobalObjectNS.GlobalObject

@{
    ViewBag.Title = "ShowCashMenu";
    
    
    
    //ModelsClassLibrary.ModelsNS.MenuNS.MenuManagerNS.UserMoneyAccount moneyAccount = ViewBag.MoneyAccount as ModelsClassLibrary.ModelsNS.MenuNS.MenuManagerNS.UserMoneyAccount ?? new ModelsClassLibrary.ModelsNS.MenuNS.MenuManagerNS.UserMoneyAccount();



    string amountRefundableMenuItem = Model.Money_System.Refundable.MenuName;
    string amountRefundableToolTip = Model.Money_System.Refundable.MenuToolTip;
    string amountRefundableMenu_Path = Url.Action("DebitCredit_Refundable_All_Admin", "CashTrxs").ToString();

    string amountNotRefundableMenuItem = Model.Money_System.Non_Refundable.MenuName;
    string amountNotRefundableToolTip = Model.Money_System.Non_Refundable.MenuToolTip;
    string amountNotRefundableMenu_Path = Url.Action("DebitCredit_NonRefundable_All_Admin", "CashTrxs").ToString();

