    string amountRefundableAndNonRefundable = Model.Money_System.TotalCash.MenuName;
    
}

<h2 class="text-danger">System Cash Position</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container p-3 ">
