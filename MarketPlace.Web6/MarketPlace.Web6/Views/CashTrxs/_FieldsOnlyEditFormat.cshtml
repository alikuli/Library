@model ModelsClassLibrary.ModelsNS.DocumentsNS.CashsNS.CashTrxNS.CashTrx

<div class="form-horizontal">

    @*@Html.HiddenFor(x => x.DocNumber)*@
    <div class="form-group">
        <strong>
            @Html.LabelFor(model => model.DocNumber, htmlAttributes: new { @class = "" })
            @Html.DisplayFor(model => model.DocNumber)
        </strong>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.CashTypeEnum, htmlAttributes: new { @class = "" })
        @Html.DropDownListFor(x => x.CashTypeEnum,
                          (@Model.SelectListCashTypeEnum as IEnumerable<SelectListItem>),
                          "--- Select Cash Type ---",
                  new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.PersonFromId, htmlAttributes: new { @class = "" })
        @Html.DropDownListFor(x => x.PersonFromId,
                  (@Model.SelectListPeopleFrom as IEnumerable<SelectListItem>),
                  "--- Select Person ---",
                  new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PersonToId,  htmlAttributes: new { @class = "" })
        @Html.DropDownListFor(x => x.PersonToId,
                  (@Model.SelectListPeopleTo as IEnumerable<SelectListItem>),
                  "--- Select Person ---",
                  new { @class = "form-control" })
    </div>


    @Html.Partial(@"_Name_And_DetailInfo")


</div>
