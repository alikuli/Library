@model ModelsClassLibrary.ModelsNS.DocumentsNS.BuySellDocNS.BuySellDoc


<div class="well p-3 m-3">

    @if(Model.DocumentNumber != 0)
    { 
    <div class="form-group">
        <strong>
            @Html.LabelFor(model => model.DocumentNumber, htmlAttributes: new { @class = "" })
            @Html.DisplayFor(model => model.DocumentNumber)
        </strong>
    </div>
    }
    
    <div class="form-group">
        @Html.LabelFor(model => model.OwnerId, htmlAttributes: new { @class = "" })
        @Html.DropDownListFor(x => x.OwnerId,
                         (@Model.SelectListOwner as IEnumerable<SelectListItem>),
                  "--- Select Owner---",
                  new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CustomerId, htmlAttributes: new { @class = "" })
        @Html.DropDownListFor(x => x.CustomerId,
                         (@Model.SelectListCustomer as IEnumerable<SelectListItem>),
                  "--- Select Customer---",
                  new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.AddressShipToId, htmlAttributes: new { @class = "" })
        @Html.DropDownListFor(x => x.AddressShipToId,
                          (@Model.SelectListAddressShipTo as IEnumerable<SelectListItem>),
                  "--- Add Ship To Address ---",
                  new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AddressInformTo, htmlAttributes: new { @class = "" })
        @Html.DropDownListFor(x => x.AddressInformTo,
                 (@Model.SelectListAddressInformTo as IEnumerable<SelectListItem>),
                  "--- Add Inform To Address ---",
                  new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.LastShipDate, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.LastShipDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
        @Html.ValidationMessageFor(model => model.LastShipDate, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.PoDate, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.PoDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
        @Html.ValidationMessageFor(model => model.PoDate, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.PoNumber, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.PoNumber, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.PoNumber, "", new { @class = "text-danger" })
    </div>

    @Html.Partial(@"_Name_And_DetailInfo")








</div>
