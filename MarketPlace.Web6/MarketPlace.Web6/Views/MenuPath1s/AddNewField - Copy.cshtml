@model ModelsClassLibrary.ModelsNS.ProductNS.FeaturesNS.Feature

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Feature</h4>
        <hr />

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model =>model.MenuPath1Id)

